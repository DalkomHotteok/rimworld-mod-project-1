<?xml version="1.0" encoding="utf-8" ?>
<Defs>

      <!--Beret-->
  
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_RedtailBeret</defName>
    <label>Redtail beret</label>
    <description>Redtail is top secret special force. The place where they passed is full of blood. That`s why they called Redtail.</description>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Apparel/apparel/Beret</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <costStuffCount>35</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>4000</WorkToMake>
      <Mass>0.1</Mass>
      <EquipDelay>0.8</EquipDelay>
      <StuffEffectMultiplierInsulation_Cold>0.07</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.1</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <wornGraphicPath>Things/Apparel/apparel/Beret</wornGraphicPath>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>NobleApparel</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

</Defs>