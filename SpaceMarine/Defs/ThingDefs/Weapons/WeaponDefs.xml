<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ==================== Overcharge Rifle ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_OverchargeRifle</defName>
    <label>Overcharge rifle</label>
    <description>A charged-shot assault rifle with improved battery power. Contained micro-circuit in the accumulator makes more efficient power system. It leads to improved firepower. \n\n'LC-37' model is White Guardian reconnaissance trooper`s standard Combat Equipment.</description>
    <graphicData>
      <texPath>Things/Weapons/OverCharge_Rifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<equippedAngleOffset>0</equippedAngleOffset>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <skillRequirements>
        <Crafting>11</Crafting>
      </skillRequirements>
	  <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>6</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>1.6</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>90</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>OverchargeRifle_Bullet</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>27</range>
		<burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>5</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
